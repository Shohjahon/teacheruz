<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/myteacher</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">1</property>
        <property name="hibernate.current_session_context_class">org.hibernate.context.internal.ThreadLocalSessionContext</property>
        <property name="connection.pool_size">1</property>
        <property name="show_sql">true</property>
        <property name="hbm2ddl.auto">update</property>
        <!-- List of XML mapping files -->

        <mapping class="com.teacher.uz.my.domains.EducationHistory"/>
        <mapping class="com.teacher.uz.my.domains.Article"/>
        <mapping class="com.teacher.uz.my.domains.Comment"/>
        <mapping class="com.teacher.uz.my.domains.User"/>
        <mapping class="com.teacher.uz.my.domains.Thumbnail"/>
        <mapping class="com.teacher.uz.my.domains.Subject"/>
        <mapping class="com.teacher.uz.my.domains.Test"/>
        <mapping class="com.teacher.uz.my.domains.LogTest"/>
        <mapping class="com.teacher.uz.my.domains.Skill"/>
        <mapping class="com.teacher.uz.my.domains.UniversityFieldUser"/>
        <mapping class="com.teacher.uz.my.domains.Category"/>
        <mapping class="com.teacher.uz.my.domains.Field"/>
        <mapping class="com.teacher.uz.my.domains.UniversityField"/>
        <mapping class="com.teacher.uz.my.domains.RepassLog"/>
        <mapping class="com.teacher.uz.my.domains.University"/>
        <mapping class="com.teacher.uz.my.domains.Rooms"/>
        <mapping class="com.teacher.uz.my.domains.Lesson"/>
        <mapping class="com.teacher.uz.my.domains.TRoomLesson"/>
        <mapping class="com.teacher.uz.my.domains.Group"/>
        <mapping class="com.teacher.uz.my.domains.StudentTLesson"/>


    </session-factory>
</hibernate-configuration>